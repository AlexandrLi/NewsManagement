<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="newsForm"
                   type="com.epam.ali.testapp.presentation.form.NewsForm">
        </form-bean>
    </form-beans>

    <action-mappings>
        <action path="/news" parameter="method" type="com.epam.ali.testapp.presentation.action.NewsAction"
                name="newsForm">
            <forward name="list" path="news-list"/>
            <forward name="view" path="news-view"/>
            <forward name="add" path="news-add"/>
            <forward name="edit" path="edit-news"/>
            <forward name="delete" path="/news.do?method=list"/>
        </action>
    </action-mappings>

    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml"/>
    </plug-in>
</struts-config>